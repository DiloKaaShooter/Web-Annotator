{
    "manifest_version": 3,
    "name": "Web-Annotator",
    "version": "1.0",
    "description": "An extension which enables a user to Annotate a webpage and save them for further use.",
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "background": {
      "service_worker": "scripts/service-worker.js"
    },
    "action":{
      "default_title": "Annotate the web:\n Click ctrl + B or cmd + B to open sidePanel",
      "default_popup": "popup.html"
    },   
    "permissions": ["sidePanel", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
        "scripts/toolbar.js",
        "scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/annotator-toolbar/annotator-toolbar.html",
        "images/*"
      ],
      "matches":["<all_urls>"]
    }
  ]
  }
  